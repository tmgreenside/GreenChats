<% extend('base') %>

<h3>Welcome to GreenChats!</h3>
<p>Sign in below, or join us <a href="/register">here</a>!</p>
<form name="login" id="login">
    <input type="text" id="emailEntry" name="emailEntry" placeholder="Email"><br>
    <input type="password" name="passEntry" id="passEntry" placeholder="Password"><br>
    <div id="message">
    </div>
    <input type="submit" value="Log In">

</form>

<script>

$('document').ready(function() {
    $('#login').on("submit", function(e) {
        e.preventDefault();
        var emailEntry = $('#emailEntry').val();
        var passEntry = $('#passEntry').val();
        alert(emailEntry);
        $.ajax({
            url: "/",
            type: "POST",
            data: {
                email: emailEntry,
                pass: passEntry
            },
            success: function(data) {
                if (data.response === "success") {
                    window.location.href("/");
                }
                else {
                    $("#message").html("<p>Invalid email or password.</p>");
                }
            },
            error: function() {
                $("#message").html("<p>GreenChats experienced an error. Please try again.</p>");
            }
        })
    });
});

</script>
